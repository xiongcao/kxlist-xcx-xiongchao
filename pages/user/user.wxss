.header {
    margin: 90rpx 0 90rpx 50rpx;
    text-align: center;
    width: 650rpx;
    height: 300rpx;
    line-height: 450rpx;
}

.header image {
    width: 200rpx;
    height: 200rpx;
    border-radius:50%;
}

.content {
    margin-left: 50rpx;
    margin-bottom: 90rpx;
}

.content text {
    display: block;
    color: #9d9d9d;
    margin-top: 40rpx;
}

.bottom {
    border-radius: 80rpx;
    margin: 70rpx 50rpx;
    font-size: 35rpx;
}

.userInfo {
  box-sizing:border-box;
  height:230rpx;
  text-align:center;
  padding-top:30rpx;
  background:#fff;
  margin-bottom:16rpx;

}

.userInfo image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.userInfo text{
  font-size:10pt;
  display: block;
}

.swiper-tab{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  height:84rpx;
  line-height: 84rpx;
  font-size:13pt;
  background: #fff;
  margin-bottom:16rpx;
}

.swiper-tab view{
  padding: 0 20rpx;
}

.swiper-tab .active{
  color:#09bb07;
  border-bottom:6rpx solid #09bb07;
}
.user-swiper{
  position: absolute;
  left: 0;
  width: 100%;
  height: calc(100% - 346rpx);
}

.user-swiper scroll-view{
  height:100%;
}
