.search-toolbar {
  padding: 14rpx 16rpx;
  border-bottom: 1rpx solid #e5e5e5;
  background-color: #fff;
  display: flex;
}
.search-toolbar .search-input {
  background: #fff;
  width: 608rpx;
  height: 40rpx;
  border-radius: 10rpx;
  padding: 10rpx;
  /*display: inline-block;*/
  display: flex;
  /*vertical-align: middle;*/
  background: #f3f4f6;
  align-items: flex-start;
  position: relative;
}

.search-toolbar .search-input icon {
  /*float: left;*/
  margin-top: 8rpx;
  margin-left: 2%;
  margin-right: 1%;
}

.search-toolbar .closeIcon{
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  right: 10rpx;
  bottom: 15rpx;
}

.search-toolbar .search-input input {
  width: 100%;
  padding-left: 2%;
  font-size: 12pt;
  color: #8e8e93;
  position: relative;
  top: -4rpx;
  line-height: 1.4rem;
  padding-right: 8%;
}

