.share-common-btn{
  text-align: center;
  position: relative;
}

.share-common-btn .share-btn{
  background-color:#fff;
  height:100rpx;
  line-height:100rpx;
  font-size:14px;
  color:#8e8e93;
  border:0px solid transparent;
}

.share-common-btn .share-btn image{
  width:32rpx;
  height:28rpx;
  margin-right:8rpx;
}

.shareToBtns {
  position: absolute;
  bottom: 120rpx;
  width: 216rpx;
  background-color: #fff;
  border: solid 0.5px #d8d8d8;
  left: 16rpx;
  padding: 12rpx;
  box-sizing: border-box;
  padding-bottom: 4rpx;
}

.shareToBtns:after, .shareToBtns:before {
  border: solid transparent;
  content: ' ';
  height: 0;
  top: 100%;
  position: absolute;
  width: 0;
}

.shareToBtns:after {
  border-width: 18rpx;
  border-top-color: #fff;
  left: 87rpx;
}

.shareToBtns:before {
  border-width: 20rpx;
  border-top-color: #d8d8d8;
  left: 84rpx;
}

.shareToBtns >button {
  width: 100%;
  height: 76rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  padding-left: 6rpx;
  background-color: #fff;
  border-radius: 0;
  padding: 0;
  color: #8e8e93;
  font-size: 14px;
}

.shareToBtns button::after {
  border: 1px solid transparent;
}

.shareToBtns >button:not(:last-child) {
  border-bottom: solid 0.5px #d8d8d8;
}

.shareToBtns >button image {
  width: 60rpx;
  height: 50rpx;
}

.shareToBtns .active {
  color: #09bb07;
}

.shareToBtns .friends image {
  height: 60rpx !important;
}