.brand-card{
  background-color:#fafafa;
  width:710rpx;
  height:256rpx;
  margin: 0 auto;
  margin-bottom:32rpx;
  padding:28rpx;
  box-sizing:border-box;
  display:flex;
  flex-direction:row;
  border:solid 0.5px #d8d8d8;
}

.brand-card image {
  width:200rpx;
  height:200rpx;
  background-color:#fff;
  margin-right:20rpx;
}

.brand-card .card-right {
  width:434rpx;
  height:200rpx;
}

.brand-card .card-right .brandName{
  font-size:18px;
  color:#4a4a4a;
  height:52rpx;
  line-height:52rpx;
  margin-bottom:12rpx;
  padding-top:2rpx;
  overflow:hidden;
  width:432rpx;
}

.brand-card .card-right .brandIntro{
  font-size:14px;
  color:#8e8e93;
  line-height:44rpx;
  width:432rpx;
  display:-webkit-box;
  overflow:hidden;
  text-overflow:ellipsis;
  word-break:break-all;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:3;
}