.common-authorize .header {
    margin: 90rpx 0 90rpx 50rpx;
    text-align: center;
    width: 650rpx;
    height: 300rpx;
    line-height: 450rpx;
}

.common-authorize .header image {
    width: 200rpx;
    height: 200rpx;
    border-radius:50%;
}

.common-authorize .content {
    margin-left: 50rpx;
    margin-bottom: 90rpx;
}

.common-authorize .content text {
    display: block;
    color: #9d9d9d;
    margin-top: 40rpx;
}

.common-authorize .bottom {
    border-radius: 80rpx;
    margin: 70rpx 50rpx;
    font-size: 35rpx;
}